{ // configuration file
    "ConnectionStrings": {                                                                      // added this as our connection string // must be called ConnectionStrings
        "DefaultConnection":  "Data source=datingapp.db"           // connection strings are simple, no username or password and is just the name of the file we want it to be called
    },                                                                                                          // we then need to pass this configuration into our options // injecting configurations into the startup.cs
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Information", // changed from "Warning" to "Information"    // provides more information from our server
            "Microsoft.Hosting.Lifetime": "Information"
        }
    }
}
